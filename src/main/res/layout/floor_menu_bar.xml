<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_floor_menu_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#262b32"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/floor_menu_add"
        android:layout_width="0dp"
        android:layout_height="@dimen/floor_menu_height"
        android:layout_weight="1"
        android:background="@drawable/floor_menu_pressed"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu_add" />

    <ImageView
        android:id="@+id/floor_menu_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/floor_menu_height"
        android:layout_weight="1"
        android:background="@drawable/floor_menu_pressed"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu_search" />

    <ImageView
        android:id="@+id/floor_menu_sort"
        android:layout_width="0dp"
        android:layout_height="@dimen/floor_menu_height"
        android:layout_weight="1"
        android:background="@drawable/floor_menu_pressed"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu_sort_light" />

    <ImageView
        android:id="@+id/floor_menu_close"
        android:layout_width="0dp"
        android:layout_height="@dimen/floor_menu_height"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:background="@drawable/floor_menu_pressed"
        android:clickable="true"
        android:src="@drawable/ic_menu_cancel" />

    <ImageView
        android:id="@+id/floor_menu_refresh"
        android:layout_width="0dp"
        android:layout_height="@dimen/floor_menu_height"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:background="@drawable/floor_menu_pressed"
        android:clickable="true"
        android:src="@drawable/ic_menu_refresh" />
    <ImageView
        android:id="@+id/floor_menu_menu"
        android:layout_width="0dp"
        android:layout_height="@dimen/floor_menu_height"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:background="@drawable/floor_menu_pressed"
        android:clickable="true"
        android:src="@drawable/ic_menu_menu" />
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/new_create"
        android:textColor="@color/wallet_holo_blue_light"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/wallet_holo_blue_light" />

    <TextView
        android:id="@+id/floor_menu_add_file"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_menu_backgroud"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/file"
        android:textSize="@dimen/floor_menu_front_size"
        android:textColor="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/floor_menu_add_folder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_menu_backgroud"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/dir"
        android:textSize="@dimen/floor_menu_front_size"
        android:textColor="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/floor_menu_add_roottab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_menu_backgroud"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/root_dir_tab"
        android:textSize="@dimen/floor_menu_front_size"
        android:textColor="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/floor_menu_add_phonetab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_menu_backgroud"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/phone_dir_tab"
        android:textSize="@dimen/floor_menu_front_size"
        android:textColor="#ffffff" />

</LinearLayout>